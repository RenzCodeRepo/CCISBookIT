@model User

@{
    ViewData["Title"] = "Create a new user";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Tab icon & web-app name -->
    <title>CCISBookIT - Sign Up</title>
    <link rel="icon" type="image" href="/images/CCISBookITLogo.png">

    <!-- Link to .css file -->
    <link rel="stylesheet" href="/css/signup.css">

    <!-- Import Poppins font from Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@600&display=swap" rel="stylesheet">
</head>
<body>
    <div class="transparent-container">
        <!-- Logo and web-app name -->
        <img src="/images/CCISBookITLogo.png" alt="Logo" class="logo">
        <h1>CREATE YOUR ACCOUNT</h1>

        <!-- Link back end to "#" to save the inputted data from the <form> -->
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="FacultyID" class="control-label"> FACULTY ID</label>
                    <input asp-for="FacultyID" class="form-control" />
                    <span asp-validation-for="FacultyID" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label">EMAIL</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="FullName" class="control-label">FULL NAME</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label">PHONE NUMBER</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <!-- There is no variable for Department
            <div class="form-group">
                    <label asp-for="Department" class="control-label">DEPARTMENT</label>
                    <input asp-for="Department" class="form-control" />
                    <span asp-validation-for="Department" class="text-danger"></span>
            </div> -->

            <div class="form-row spaced-row">
                <div class="form-group">
                    <label asp-for="PasswordHash" class="control-label">PASSWORD</label>
                    <input asp-for="PasswordHash" class="form-control" />
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PasswordHash" class="control-label">CONFIRM PASSWORD</label>
                    <input asp-for="PasswordHash" class="form-control" />
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>
            </div>

            <div class="button-container">
                <button type="button" onclick="location.href='Login'">BACK</button>
                <button type="submit">SIGN IN</button>
            </div>
        </form>
    </div>
</body>
</html>

@model CCISBookIT.ViewModels.EditUserViewModel // Specifies that the model for this view is of type User

@{
    ViewData["Title"] = "Edit User"; // Sets the title of the view
}

<h2>Edit Profile</h2> <!-- Main heading -->

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div> <!-- Validation summary for model errors -->

    <div class="form-group">
        <label asp-for="FacultyID"></label> <!-- Label for FacultyID -->
        <input asp-for="FacultyID" class="form-control" readonly /> <!-- Readonly input field for FacultyID -->
    </div>

    <div class="form-group">
        <label asp-for="FullName"></label> <!-- Label for FullName -->
        <input asp-for="FullName" class="form-control" /> <!-- Input field for FullName -->
    </div>

    <div class="form-group">
        <label asp-for="Email"></label> <!-- Label for Email -->
        <input asp-for="Email" class="form-control" /> <!-- Input field for Email -->
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber"></label> <!-- Label for PhoneNumber -->
        <input asp-for="PhoneNumber" class="form-control" /> <!-- Input field for PhoneNumber -->
    </div>

    <button type="submit" class="btn btn-primary">Save</button> <!-- Save button to submit the form -->
</form>

<a asp-action="Detail" asp-controller="User" class="btn btn-primary">Cancel</a>

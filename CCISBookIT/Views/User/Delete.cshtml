@model AppUser

@{
    ViewData["Title"] = "Delete User";
}
@section Styles {
    <link rel="stylesheet" href="/css/ProfileDelete.css" />
}

<div class="background-container">
    <div class="edit-container">

        <div class="form-container glass-effect">
            <h2>Delete User</h2>
            <h3>Are you sure you want to delete this user?</h3>
            <div>
                <h4>@Model.FullName</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.FacultyID)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.FacultyID)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.FullName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.FullName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="FacultyID" />
                    <div class="form-buttons">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Detail" asp-route-id="@Model.FacultyID" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

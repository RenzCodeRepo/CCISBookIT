@model AppUser // Specifies that the model for this view is of type User

@{
    ViewData["Title"] = "User Details"; // Sets the title of the view
}

<h1>User Details</h1> <!-- Main heading -->

<table class="table">
    <tr>
        <td><strong>@Html.DisplayNameFor(model => model.FacultyID)</strong></td>
        <td>@Html.DisplayFor(model => model.FacultyID)</td>
    </tr>
    <tr>
        <td><strong>@Html.DisplayNameFor(model => model.FullName)</strong></td>
        <td>@Html.DisplayFor(model => model.FullName)</td>
    </tr>
    <tr>
        <td><strong>@Html.DisplayNameFor(model => model.Email)</strong></td>
        <td>@Html.DisplayFor(model => model.Email)</td>
    </tr>
    <tr>
        <td><strong>@Html.DisplayNameFor(model => model.PhoneNumber)</strong></td>
        <td>@Html.DisplayFor(model => model.PhoneNumber)</td>
    </tr>
</table>

<div class="mb-3">
    <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Close</a> <!-- Button/link to navigate back to the list of users -->
    <a asp-action="Edit" asp-controller="User" asp-route-id="@Model.FacultyID" class="btn btn-success">Edit Profile</a> <!-- Edit button/link -->
</div>

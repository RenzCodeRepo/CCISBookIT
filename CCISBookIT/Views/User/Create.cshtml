@model CCISBookIT.Models.AppUser // Specifies that the model for this view is of type User from the CCISBookIT.Models namespace

<form method="post" asp-action="Create">
    <!-- Validation summary for model errors -->
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <!-- Label and input field for FacultyID -->
        <label asp-for="FacultyID" class="control-label"></label>
        <input asp-for="FacultyID" class="form-control" />
        <span asp-validation-for="FacultyID" class="text-danger"></span> <!-- Validation message for FacultyID -->
    </div>

    <div class="form-group">
        <!-- Label and input field for FullName -->
        <label asp-for="FullName" class="control-label"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span> <!-- Validation message for FullName -->
    </div>

    <div class="form-group">
        <!-- Label and input field for Email -->
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span> <!-- Validation message for Email -->
    </div>

    <div class="form-group">
        <!-- Label and input field for PhoneNumber -->
        <label asp-for="PhoneNumber" class="control-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span> <!-- Validation message for PhoneNumber -->
    </div>

    <div class="form-group">
        <!-- Label and input field for PasswordHash (password type) -->
        <label asp-for="PasswordHash" class="control-label"></label>
        <input asp-for="PasswordHash" type="password" class="form-control" />
        <span asp-validation-for="PasswordHash" class="text-danger"></span> <!-- Validation message for PasswordHash -->
    </div>

    <div class="form-group" style="display: none;">
        <!-- Hidden input field for Role (set to "Faculty" and readonly) -->
        <label asp-for="Role" class="control-label"></label>
        <input asp-for="Role" value="Faculty" readonly class="form-control" />
        <span asp-validation-for="Role" class="text-danger"></span> <!-- Validation message for Role -->
    </div>

    <!-- Submit button to add the user -->
    <button type="submit" class="btn btn-primary">Add User</button>
</form>

<!-- Link/button to navigate back to the list of users -->
<a asp-action="Index" class="btn btn-primary">Back to List</a>

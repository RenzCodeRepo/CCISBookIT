@model IEnumerable<Booking>

@{
    ViewData["Title"] = "List of Bookings";
}

<div class="row">
    <div class="col-md-10 offset-md-1">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.BookingId)</th>
                    <th>@Html.DisplayNameFor(model => model.Date)</th>
                    <th>@Html.DisplayNameFor(model => model.StartTime)</th>
                    <th>@Html.DisplayNameFor(model => model.Duration)</th>
                    <th>@Html.DisplayNameFor(model => model.EndTime)</th>
                    <th>@Html.DisplayNameFor(model => model.Purpose)</th>
                    <th>@Html.DisplayNameFor(model => model.Status)</th>
                    <th>@Html.DisplayNameFor(model => model.RoomNo)</th>
                    <th>@Html.DisplayNameFor(model => model.FacultyId)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.BookingId)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Date)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.StartTime)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Duration)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.EndTime)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Purpose)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Status)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.RoomNo)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.FacultyId)</td>
                        <td class="align-middle">
                            <a class="btn-outline-primary" ><i class="bi bi-pencil-square"></i> Edit</a> |
                            <a class="btn-outline-info" ><i class="bi bi-eye"></i> Details</a> |
                            <a class="btn-danger" ><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@model IEnumerable<Booking>

@{
    ViewData["Title"] = "List of Bookings";
}

<div class="row">
    <div class="col-md-12 offset-md-0">
        <h2>@ViewData["Title"]</h2> <!-- Display the title of the page -->

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.BookingId)</th>
                    <th>@Html.DisplayNameFor(model => model.Date)</th>
                    <th>@Html.DisplayNameFor(model => model.StartTime)</th>
                    <th>@Html.DisplayNameFor(model => model.Duration)</th>
                    <th>@Html.DisplayNameFor(model => model.EndTime)</th>
                    <th>@Html.DisplayNameFor(model => model.Purpose)</th>
                    <th>@Html.DisplayNameFor(model => model.Status)</th>
                    <th>@Html.DisplayNameFor(model => model.RoomNo)</th>
                    <th>@Html.DisplayNameFor(model => model.FacultyId)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) @* <!-- Loop through each booking in the model --> *@
                {
                    <tr class="text-center">
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.BookingId)</td> <!-- Display BookingId for each booking -->
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Date)</td> <!-- Display Date for each booking -->
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.StartTime)</td> <!-- Display StartTime for each booking -->
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Duration)</td> <!-- Display Duration for each booking -->
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.EndTime)</td> <!-- Display EndTime for each booking -->
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Purpose)</td> <!-- Display Purpose for each booking -->
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Status)</td> <!-- Display Status for each booking -->
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.RoomNo)</td> <!-- Display RoomNo for each booking -->
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.FacultyId)</td> <!-- Display FacultyId for each booking -->
                        <td class="align-middle">
                            <a href="@Url.Action("Edit", "Booking", new { id = item.BookingId })" class="btn btn-outline-primary">
                                <i class="bi bi-pencil-square"></i> Edit <!-- Edit button with icon -->
                            </a>
                            <a href="@Url.Action("Delete", "Booking", new { id = item.BookingId })" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete <!-- Delete button with icon -->
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
